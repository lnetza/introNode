extends ../layout/index

block contenido 
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}
        .row.proximos-viajes
            each viaje in viajes
                .col-md-6.col-lg-4.mb-4
                    .card
                        img(src=`img/destinos_${viaje.imagen}.jpg` class="img-fluid")
                        .card-body
                            h2=viaje.titulo  
